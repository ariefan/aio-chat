# =============================================================================
# AIO-CHAT POC - Environment Variables Configuration
# =============================================================================
# Copy this file to .env.local for local development
# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string for Drizzle ORM
DATABASE_URL=postgresql://username:password@localhost:5432/aio_chat_poc

# Redis connection for caching and sessions (optional for POC)
REDIS_URL=redis://localhost:6379

# =============================================================================
# NEXT.JS CONFIGURATION
# =============================================================================
# Next.js secret for session encryption
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production-32-chars
NEXTAUTH_URL=http://localhost:3000

# Application URL (change to your domain in production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# AUTHENTICATION (NextAuth.js)
# =============================================================================
# NextAuth.js configuration
NEXTAUTH_SESSION_MAX_AGE=604800  # 7 days in seconds
NEXTAUTH_SESSION_UPDATE_AGE=86400  # 1 day in seconds

# =============================================================================
# OPENAI CONFIGURATION (for RAG functionality)
# =============================================================================
# OpenAI API key for chat completions and embeddings
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI model configuration
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# =============================================================================
# JENNY CHATBOT - AI PROVIDER CONFIGURATION
# =============================================================================
# OpenRouter API (Primary - for google/gemma-3-4b-it)
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-key
OPENROUTER_MODEL=google/gemma-3-4b-it

# TogetherAI (Fallback)
TOGETHERAI_API_KEY=your-togetherai-key
TOGETHERAI_MODEL=google/gemma-2-9b-it

# =============================================================================
# VECTOR DATABASE (for RAG)
# =============================================================================
# Pinecone configuration
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-west1-gcp-free
PINECONE_INDEX=aio-chat-poc

# Alternatively, Weaviate configuration
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your-weaviate-api-key-here

# =============================================================================
# MESSAGING PLATFORMS
# =============================================================================
# WhatsApp Business API configuration
WHATSAPP_PHONE_ID=1234567890123456
WHATSAPP_ACCESS_TOKEN=EAAJZA12Ce12345...
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_VERSION=v18.0

# Telegram Bot API configuration
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_WEBHOOK_URL=http://localhost:3000/api/webhooks/telegram

# =============================================================================
# SCHEDULING & AUTOMATION
# =============================================================================
# Node-cron configuration
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=UTC

# =============================================================================
# FILE STORAGE (for document uploads in RAG)
# =============================================================================
# AWS S3 configuration (optional for POC)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=aio-chat-poc-uploads

# Alternatively, local storage configuration
LOCAL_STORAGE_ENABLED=true
LOCAL_STORAGE_PATH=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
# WebSocket server configuration
WS_PORT=3001
WS_HEARTBEAT_INTERVAL=30000  # 30 seconds
WS_MAX_CONNECTIONS=1000

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Logging configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Error monitoring (optional for POC)
SENTRY_DSN=https://your-sentry-dsn-here
SENTRY_ENVIRONMENT=development

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Development mode settings
NODE_ENV=development
DEBUG=aio-chat:*

# Enable/disable features for development
ENABLE_TELEMETRY=false
ENABLE_ANALYTICS=false
ENABLE_DEBUG_ROUTES=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# DOCKER & PRODUCTION
# =============================================================================
# Docker configuration (only needed in production)
PORT=3000
HOST=0.0.0.0

# SSL configuration (for production)
SSL_CERT_PATH=/etc/ssl/certs/app.crt
SSL_KEY_PATH=/etc/ssl/private/app.key

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================
# Next.js performance settings
NEXT_TELEMETRY_DISABLED=1

# Turbopack configuration (Next.js 16)
TURBOPACK=1

# =============================================================================
# TESTING (for development)
# =============================================================================
# Mock external APIs for testing
MOCK_OPENAI=false
MOCK_WHATSAPP=false
MOCK_TELEGRAM=false

# Test database configuration
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/aio_chat_test